{
  "name" : "Data Clearer",
  "version" : "1.0",
  "description" : "Remove data on demand and/or exit.",
  "permissions": [
    "browsingData"
  ],
  "background": {
    "scripts": ["background.js"],
	"persistent": true
  },
  "browser_action": {
     "default_icon": "icon16.png",
     "default_popup": "popup.html"
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "manifest_version": 2
}
